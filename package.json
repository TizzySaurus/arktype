{
	"name": "arktype",
	"description": "TypeScript's 1:1 validator, optimized from editor to runtime",
	"version": "1.0.18-beta",
	"license": "MIT",
	"author": {
		"name": "David Blass",
		"email": "david@arktype.io",
		"url": "https://arktype.io"
	},
	"engines": {
		"node": ">=16"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arktypeio/arktype.git"
	},
	"packageManager": "pnpm@8.6.6",
	"scripts": {
		"prChecks": "pnpm install && pnpm lint && pnpm checkFormat && pnpm testRepo && pnpm buildRepo",
		"build": "ts ./dev/build.ts",
		"buildRepo": "pnpm -r exec -- tsup --config meta/configs/tsup.config.ts",
		"docgen": "ts ./dev/docgen.ts",
		"test": "mocha",
		"tnt": "mocha --skipTypes",
		"testRepo": "pnpm test && cd ./ark/test && pnpm test && pnpm testTsVersions",
		"testTsVersions": "ts ./dev/testTsVersions.ts",
		"typecheck": "tsc --noEmit",
		"tsin": "tsc --noEmit --extendedDiagnostics --composite false",
		"lint": "eslint --max-warnings=0 .",
		"format": "prettier --write --ignore-path ./meta/configs/.prettierignore .",
		"checkFormat": "prettier --check --ignore-path ./dev/.prettierignore .",
		"changes": "cd ./dev && node ../node_modules/@changesets/cli/bin.js",
		"knip": "knip",
		"ci:publish": "pnpm changes publish",
		"ci:version": "ts ./dev/scripts/updateVersions.ts"
	},
	"devDependencies": {
		"@arktype/scripts": "workspace:*",
		"@arktype/test": "workspace:*",
		"@arktype/util": "workspace:*",
		"@changesets/changelog-github": "0.4.8",
		"@changesets/cli": "2.26.2",
		"@swc/cli": "0.1.62",
		"@swc/core": "1.3.73",
		"@types/mocha": "10.0.1",
		"@types/node": "20.4.5",
		"@typescript-eslint/eslint-plugin": "6.2.1",
		"@typescript-eslint/parser": "6.2.1",
		"c8": "8.0.1",
		"eslint": "8.46.0",
		"eslint-config-prettier": "8.9.0",
		"eslint-define-config": "1.22.0",
		"eslint-import-resolver-typescript": "3.5.5",
		"eslint-plugin-import": "2.28.0",
		"eslint-plugin-mdx": "2.1.0",
		"eslint-plugin-only-warn": "1.1.0",
		"eslint-plugin-prefer-arrow-functions": "3.1.4",
		"knip": "2.17.2",
		"mocha": "10.2.0",
		"prettier": "3.0.0",
		"prettier-plugin-jsdoc": "1.0.1",
		"ts-node": "10.9.1",
		"tsup": "7.1.0",
		"typescript": "5.1.6"
	},
	"mocha": {
		"spec": [
			"**/test/*.test.*"
		],
		"ignore": "**/node_modules/*",
		"//": "NOTE: These are also maintained in .vscode/settings.json",
		"node-option": [
			"loader=ts-node/esm",
			"no-warnings=ExperimentalWarning",
			"conditions=arktype-dev"
		],
		"require": "./meta/configs/mocha.fixtures.ts"
	},
	"c8": {
		"checkCoverage": true,
		"lines": 96,
		"src": "./src",
		"exclude": [
			"test/**",
			"meta/**"
		],
		"extension": ".ts",
		"reporter": "lcovonly"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"trailingComma": "none"
	},
	"quokka": {
		"showValueOnSelection": false,
		"env": {
			"params": {
				"runner": "--conditions=arktype-dev"
			}
		}
	},
	"tsup": {
		"config": "./meta/configs/tsup.config.ts"
	},
	"eslintConfig": {
		"extends": "./meta/configs/.eslintrc.cjs"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"@algolia/client-search",
				"@babel/core",
				"typescript"
			]
		}
	}
}
