{
	"name": "arktype",
	"description": "TypeScript's 1:1 validator, optimized from editor to runtime",
	"license": "MIT",
	"funding": "https://github.com/arktypeio/arktype?sponsor=1",
	"author": {
		"name": "David Blass",
		"email": "david@arktype.io",
		"url": "https://arktype.io"
	},
	"engines": {
		"node": ">=16"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arktypeio/arktype.git"
	},
	"type": "module",
	"scripts": {
		"prChecks": "pnpm install && pnpm lint && pnpm checkFormat && pnpm testRepo && pnpm buildRepo",
		"build": "pnpm -r build",
		"docgen": "ts ./ark/repo/docgen.ts",
		"test": "mocha",
		"tnt": "mocha --skipTypes",
		"testRepo": "pnpm test && cd ./ark/test && pnpm test && pnpm testTsVersions",
		"testTsVersions": "ts ./ark/repo/testTsVersions.ts",
		"typecheck": "tsc --noEmit",
		"tsin": "tsc --noEmit --extendedDiagnostics --composite false",
		"lint": "eslint --max-warnings=0 .",
		"format": "prettier --write --ignore-path ./ark/repo/.prettierignore .",
		"checkFormat": "prettier --check --ignore-path ./ark/repo/.prettierignore .",
		"changes": "cd ./dev && node ../node_modules/@changesets/cli/bin.js",
		"knip": "knip",
		"ci:publish": "pnpm changes publish",
		"ci:version": "ts ./ark/repo/updateVersions.ts"
	},
	"devDependencies": {
		"arktype": "workspace:*",
		"@arktype/attest": "workspace:*",
		"@arktype/repo": "workspace:*",
		"@changesets/changelog-github": "0.4.8",
		"@changesets/cli": "2.26.2",
		"@swc/cli": "0.1.62",
		"@swc/core": "1.3.82",
		"@types/mocha": "10.0.2",
		"@types/node": "20.8.2",
		"@typescript-eslint/eslint-plugin": "6.7.4",
		"@typescript-eslint/parser": "6.7.4",
		"c8": "8.0.1",
		"eslint": "8.50.0",
		"eslint-config-prettier": "9.0.0",
		"eslint-define-config": "1.23.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-mdx": "2.2.0",
		"eslint-plugin-only-warn": "1.1.0",
		"eslint-plugin-prefer-arrow-functions": "3.1.4",
		"knip": "2.30.1",
		"mocha": "10.2.0",
		"prettier": "3.0.3",
		"prettier-plugin-jsdoc": "1.0.4",
		"ts-node": "10.9.1",
		"tsup": "7.2.0",
		"typescript": "5.2.2"
	},
	"mocha": {
		"spec": [
			"**/__tests__/*.test.*"
		],
		"ignore": "**/node_modules/*",
		"//": "NOTE: These are also maintained in .vscode/settings.json",
		"node-option": [
			"loader=ts-node/esm",
			"no-warnings=ExperimentalWarning",
			"conditions=arktype-repo"
		],
		"require": "./ark/repo/mocha.fixtures.ts"
	},
	"c8": {
		"checkCoverage": true,
		"lines": 96,
		"src": "./src",
		"exclude": [
			"__tests__/**"
		],
		"extension": ".ts",
		"reporter": "lcovonly"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"trailingComma": "none"
	},
	"tsup": {
		"config": "./ark/repo/tsup.config.ts"
	},
	"eslintConfig": {
		"extends": "./ark/repo/.eslintrc.cjs"
	}
}
