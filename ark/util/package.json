{
	"name": "@arktype/util",
	"version": "0.0.2",
	"author": {
		"name": "David Blass",
		"email": "david@arktype.io",
		"url": "https://arktype.io"
	},
	"type": "module",
	"main": "./dist/main.cjs",
	"types": "./dist/main.d.cts",
	"exports": {
		".": {
			"arktype-repo": "./main.js",
			"import": "./dist/main.js",
			"require": "./dist/main.cjs"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --config ../repo/tsup.config.ts"
	},
	"mocha": {
		"spec": [
			"__tests__/**/*.test.*"
		],
		"ignore": "**/node_modules/*",
		"//": "NOTE: These are also maintained in .vscode/settings.json",
		"node-option": [
			"loader=ts-node/esm",
			"no-warnings=ExperimentalWarning",
			"conditions=arktype-repo"
		],
		"require": "../repo/mocha.fixtures.ts"
	}
}
